{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"target": "ES2018",
		"outDir": "out",
		"lib": [
			"es6",
			"ES2016",
            "ES2016.Array.Include"
		],
		"sourceMap": true,
		"declaration": true,
		"rootDir": "src",
		"skipLibCheck": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
	},
	"exclude": [
		"out",
		"node_modules",
		".vscode-test"
	]
}